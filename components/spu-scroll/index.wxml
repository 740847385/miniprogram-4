<view class="container">
    <image src="{{theme.title_img}}" class="title"></image>
    <scroll-view    scroll-x  class="scroll-view">
        <view class="inner">
        <block wx:for="{{spuList}}">
            <view class="spu-container">
                <image src="{{item.img}}" class="spu-img"></image>
                <text class="spu-text">{{item.title}}</text>
                <l-price value="{{item.price}}" color="#157658" l-value-class="price-value"
                         l-unit-class="price-unit"></l-price>

            </view>
        </block>
        </view>
    </scroll-view>
</view>